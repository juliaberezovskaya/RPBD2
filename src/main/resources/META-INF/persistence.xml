<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">

        <class>db2.CargoType</class>
        <class>db2.Cars</class>
        <class>db2.Clients</class>
        <class>db2.Condition</class>
        <class>db2.Drivers</class>
        <class>db2.MovingInfo</class>
        <class>db2.Orders</class>
        <class>db2.Stuff</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/db2"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="user2"/>
            <property name="hibernate.connection.password" value="12345"/>
        </properties>
    </persistence-unit>
</persistence>
